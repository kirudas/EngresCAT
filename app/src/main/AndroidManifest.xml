<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.bosccoma.info.engrescat">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/engrescat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/engrescat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LlistaEventsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />
        <activity android:name=".OpcionsMenu" />
        <activity android:name=".AdvancedSearch" />
        <activity
            android:name=".DetallEvent"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />
        <activity android:name=".Profile" />
        <activity android:name=".ProximsEvents" />
    </application>

</manifest>